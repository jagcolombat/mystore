{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@env/shop/*": ["apps/shop/src/environments/*"],
      "@ecommerce/shop-backend/dto": ["apps/shop-backend/src/app/shop/dto"],
      "@ecommerce/shop/products": ["libs/shop/products/src/index.ts"],
      "@ecommerce/shared/material": ["libs/shared/material/src/index.ts"],
      "@ecommerce/shop/utils": ["libs/shop/utils/src/index.ts"],
      "@ecommerce/shop/data-access": ["libs/shop/data-access/src/index.ts"],
      "@ecommerce/shop/layout": ["libs/shop/layout/src/index.ts"],
      "@ecommerce/shop/ui": ["libs/shop/ui/src/index.ts"],
      "@ecommerce/shared/security": ["libs/shared/security/src/index.ts"],
      "@ecommerce/shared/api": ["libs/shared/api/src/index.ts"],
      "@ecommerce/shop/admin": ["libs/shop/admin/src/index.ts"],
      "@ecommerce/shop/share/dto": ["libs/shop/share/dto/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
